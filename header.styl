#container
  #container-inner
    #blog-title
      width 100%
      height 480px
      margin-bottom 64px
      #blog-title-inner
        width 100%
        height 100%
        background-image url('http://cdn-ak.f.st-hatena.com/images/fotolife/a/axross/20150927/20150927110359.jpg') !important
        background-size cover
        background-position 50% 50%
        #blog-title-content
          position relative
          width 100%
          height 100%
          background rgba(0, 0, 0, .25)
          #title
            position absolute
            top 50%
            width 100%
            height 4.5rem
            line-height 4.5rem
            margin-top -2.25rem
            background transparent
            a
              display block
              line-height 4.5rem
              color #fff
              font-size 3rem
              text-align center
